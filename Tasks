                case 2:
                {
                    int number = t.readInt(scanner); // читаем число
                    boolean result = t1.isPositive(number);
                    System.out.println("Результат: " + result);
                    scanner.close();
                    break;
                }
                case 3:
                {
                    char ch = t.readChar(scanner); // читаем букву
                    boolean result = t1.isUpperCase(ch);
                    System.out.println("Результат: " + result);
                    scanner.close();
                    break;
                }
                case 4:
                {
                    int number1 = t.readInt(scanner); // читаем 1 число
                    int number2 = t.readInt(scanner); // читаем 2 число
                    boolean result = t1.isDivisor(number1, number2); // считаем сумму
                    System.out.println("Результат: " + result);
                    scanner.close();
                    break;
                }
                case 5:
                {
                    System.out.println("Введите 2 числа:");
                    int number1 = scanner.nextInt(); // первое число
                    int number2 = scanner.nextInt(); // второе число
                    int result = t1.lastNumSum(number1, number2);
                    System.out.println("Итого: " + result);
                    scanner.close();
                    break;
                }
                case 6:
                {
                    System.out.println("Введите 2 числа:");
                    int number1 = scanner.nextInt(); // первое число
                    int number2 = scanner.nextInt(); // второе число
                    double result = t2.safeDiv(number1, number2);
                    System.out.println("Результат: " + result);
                    scanner.close();
                    break;
                }
                case 7:
                {
                    System.out.println("Введите 2 числа:");
                    int number1 = scanner.nextInt(); // первое число
                    int number2 = scanner.nextInt(); // второе число
                    String result = t2.makeDecision(number1, number2);
                    System.out.println("Результат: " + result);
                    scanner.close();
                    break;
                }
                case 8:
                {
                    System.out.println("Введите 3 числа:");
                    int number1 = scanner.nextInt(); // первое число
                    int number2 = scanner.nextInt(); // второе число
                    int number3 = scanner.nextInt(); // третье число
                    boolean result = t2.sum3(number1, number2, number3);
                    System.out.println("Результат: " + result);
                    scanner.close();
                    break;
                }
                case 9:
                {
                    System.out.println("Введите число:");
                    int number = scanner.nextInt();
                    String result = t2.age(number);
                    System.out.println("Результат: " + result);
                    scanner.close();
                    break;
                }
                case 10:
                {
                    System.out.println("Введите день недели:");
                    String day = scanner.nextLine();
                    System.out.println("Результат: ");
                    t2.printDays(day);
                    scanner.close();
                    break;
                }
                case 11:
                {
                    System.out.println("Введите число:");

                    int number = scanner.nextInt();
                    String result = t3.reverseListNums(number);
                    System.out.println("Результат: " + result);
                    scanner.close();
                    break;
                }
                case 12:
                {
                    System.out.println("Введите 2 числа:");
                    int number1 = scanner.nextInt(); // первое число
                    int number2 = scanner.nextInt(); // второе число
                    int result = t3.pow(number1, number2);
                    System.out.println("Результат: " + result);
                    scanner.close();
                    break;
                }
                case 13:
                {
                    System.out.println("Введите число:");
                    int number = scanner.nextInt();
                    boolean result = t3.equalNum(number);
                    System.out.println("Результат: " + result);
                    scanner.close();
                    break;
                }
                case 14:
                {
                    System.out.println("Введите число:");
                    int number = scanner.nextInt();
                    System.out.println("Результат: ");
                    t3.leftTriangle(number);
                    scanner.close();
                    break;
                }
                case 15:
                {
                    t3.guessGame();
                    scanner.close();
                    break;
                }
                case 16:
                {
                    System.out.println("Введите размер массива:");
                    int large = scanner.nextInt();
                    if(large <= 0 )
                    {
                        System.out.println("Ошибка");
                        break;
                    }
                    int[] arr = new int[large];
                    for(int i = 0; i < large; i++)
                    {
                        arr[i] = random.nextInt(0, 10);
                    }
                    System.out.println("Массив:");
                    for(int i = 0; i < large; i++)
                    {
                        System.out.print(arr[i] + " ");
                    }
                    System.out.println();

                    System.out.println("Введите число:");
                    int number = scanner.nextInt();
                    int result = t4.findLast(arr, number);
                    System.out.println("Результат: " + result);
                    scanner.close();
                    break;
                }
                case 17:
                {
                    System.out.println("Введите размер массива:");
                    int large = scanner.nextInt();
                    if(large <= 0)
                    {
                        System.out.println("Ошибка");
                        break;
                    }
                    int[] arr = new int[large];
                    for(int i = 0; i < large; i++)
                    {
                        arr[i] = random.nextInt(0, 10);
                    }
                    System.out.println("Массив:");
                    for(int i = 0; i < large; i++)
                    {
                        System.out.print(arr[i] + " ");
                    }
                    System.out.println();

                    System.out.println("Введите число:");
                    int number = scanner.nextInt();
                    System.out.println("Введите позицию:");
                    int position = scanner.nextInt();
                    int[] result = t4.add(arr, number, position);
                    t.printArray(result);


                    scanner.close();
                    break;
                }
                case 18:
                {
                    System.out.println("Введите размер массива:");
                    int large = scanner.nextInt();
                    if(large <= 0)
                    {
                        System.out.println("Ошибка");
                        break;
                    }
                    int[] arr = new int[large];
                    for(int i = 0; i < large; i++)
                    {
                        arr[i] = random.nextInt(0, 10);
                    }
                    System.out.println("Массив:");
                    for(int i = 0; i < large; i++)
                    {
                        System.out.print(arr[i] + " ");
                    }
                    System.out.println();

                    t4.reverse(arr);
                    scanner.close();
                    break;
                }
                case 19:
                {
                    System.out.println("Введите размер массива 1:");
                    int large1 = scanner.nextInt();
                    if(large1 <= 0)
                    {
                        System.out.println("Ошибка");
                        break;
                    }
                    int[] arr1 = new int[large1];
                    for(int i = 0; i < large1; i++)
                    {
                        arr1[i] = random.nextInt(0, 10);
                    }
                    System.out.println("Массив:");
                    for(int i = 0; i < large1; i++)
                    {
                        System.out.print(arr1[i] + " ");
                    }
                    System.out.println();

                    System.out.println("Введите размер массива 2:");
                    int large2 = scanner.nextInt();
                    if(large2 <= 0)
                    {
                        System.out.println("Ошибка");
                        break;
                    }
                    int[] arr2 = new int[large2];
                    for(int i = 0; i < large2; i++)
                    {
                        arr2[i] = random.nextInt(0, 10);
                    }
                    System.out.println("Массив:");
                    for(int i = 0; i < large2; i++)
                    {
                        System.out.print(arr2[i] + " ");
                    }
                    System.out.println();

